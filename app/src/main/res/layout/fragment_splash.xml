<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.SplashFragment"
    tools:ignore="HardcodedText">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_animation_one"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/animation_one"
        app:lottie_loop="false"
        app:lottie_speed="1"
        android:layout_marginVertical="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lottie_animation_one"
        android:text="GHIBLI FILM KATALOG APP"
        android:textSize="26sp"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:textColor="@color/black"
        android:id="@+id/application_title"
        android:layout_marginBottom="20dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Unofficial"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_below="@id/application_title"
        android:gravity="center_horizontal"/>

</RelativeLayout>